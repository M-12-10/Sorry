<body>
    <div class="container">
        <div class="hello-kitty">
            <div class="ear left-ear"></div>
            <div class="ear right-ear"></div>
            <div class="bow"></div>
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="nose"></div>
            <div class="whiskers left-whiskers">
                <div class="whisker"></div>
                <div class="whisker"></div>
            </div>
            <div class="whiskers right-whiskers">
                <div class="whisker"></div>
                <div class="whisker"></div>
            </div>
        </div>

        <div class="apology-box">
            <h1>🌸 My Dearest Maryam Arif 🌸</h1>
            <div class="message">
                My Precious Meri Jaan,<br><br>
                I'm so sorry for waking up late! 😭💔<br>
                You're my sunshine, my moon, my entire universe! 🌙☀️🌍<br>
                I promise to be your human alarm clock from now on! ⏰💖<br><br>
                Will my beautiful queen please forgive her devoted partner? 👑🙏
            </div>
            <button class="forgive-button" onclick="forgiveMe()">Click Here to Forgive Me 💝</button>
        </div>
    </div>

    <script>
        // Create animated background hearts
        function createBgHearts() {
            const colors = ['#ff1493', '#ff69b4', '#ff9eb5', '#ffffff'];
            for(let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'bg-heart';
                heart.innerHTML = '❤';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.animationDuration = Math.random() * 3 + 5 + 's';
                heart.style.fontSize = Math.random() * 20 + 10 + 'px';
                heart.style.color = colors[Math.floor(Math.random() * colors.length)];
                document.body.appendChild(heart);
            }
        }

        // Cursor heart trail
        document.addEventListener('mousemove', (e) => {
            const heart = document.createElement('div');
            heart.className = 'cursor-heart';
            heart.style.left = e.clientX + 'px';
            heart.style.top = e.clientY + 'px';
            heart.innerHTML = '💖';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 1000);
        });

        function forgiveMe() {
            // Add hearts explosion
            for(let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.className = 'hearts';
                    heart.style.position = 'fixed';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.animation = `fall ${Math.random() * 2 + 3}s linear`;
                    heart.style.fontSize = Math.random() * 30 + 20 + 'px';
                    heart.innerHTML = ['💖', '💝', '💗', '💓', '💞'][Math.floor(Math.random() * 5)];
                    document.body.appendChild(heart);
                    setTimeout(() => heart.remove(), 5000);
                }, i * 50);
            }

            // Update message
            const box = document.querySelector('.apology-box');
            box.innerHTML = `
                <h1>Thank You My Love! 💞</h1>
                <div class="message">
                    Your forgiveness makes my heart sing! 🎶💕<br>
                    I love you more than all the stars in the sky! 🌟🌌<br>
                    Let's make pinky promise for forever! 🤞🌸<br>
                    (I'll wake up with 1000 kisses tomorrow!) 💋💋💋
                </div>
                <div style="font-size: 3rem; margin-top: 1rem">${'💖'.repeat(10)}</div>
            `;
            box.style.animation = 'pulse 1s infinite';
        }

        // Initial setup
        createBgHearts();
        document.querySelector('.hello-kitty').addEventListener('mouseover', () => {
            document.querySelector('.bow').style.transform = 'rotate(45deg) scale(1.2)';
        });
        document.querySelector('.hello-kitty').addEventListener('mouseout', () => {
            document.querySelector('.bow').style.transform = 'rotate(45deg)';
        });
    </script>
</body>
</html>
