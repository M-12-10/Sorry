        }
        .whisker {
            width: 40px;
            height: 2px;
            background: #000;
            transform-origin: left;
        }
        .left-whiskers .whisker:nth-child(1) { transform: rotate(-20deg); }
        .left-whiskers .whisker:nth-child(2) { transform: rotate(-40deg); }
