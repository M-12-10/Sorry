            border-radius: 50%;
            top: 20px;
            left: 20px;
        }

        /* Ears */
        .hello-kitty .ear {
            width: 50px;
            height: 50px;
            background: white;
            border-radius: 50%;
            position: absolute;
            top: -10px;
        }
        .left-ear { left: 10px; }
        .right-ear { right: 10px; }

        /* Bow */
        .bow {
            width: 80px;
            height: 80px;
            background: #ff1493;
            position: absolute;
            top: 80px;
            left: 60px;
            border-radius: 50%;
            transform: rotate(45deg);
        }
        .bow::before,
        .bow::after {
            content: '';
            width: 40px;
            height: 40px;
            background: #ff1493;
            position: absolute;
            border-radius: 50%;
        }
        .bow::before { top: -20px; left: 10px; }
        .bow::after { bottom: -20px; right: 10px; }

        /* Face */
        .eyes {
            position: absolute;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 30px;
        }
        .eye {
            width: 20px;
            height: 25px;
            background: #000;
            border-radius: 50%;
        }
        .nose {
            width: 15px;
            height: 15px;
            background: #ffd700;
            border-radius: 50%;
            position: absolute;
            top: 140px;
            left: 50%;
            transform: translateX(-50%);
        }
        .whiskers {
            position: absolute;
            top: 140px;
